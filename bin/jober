#!/usr/bin/env ruby
# encoding: utf-8
require File.expand_path(File.join(File.dirname(__FILE__), %w(.. config environment)))

klass_name = ARGV[0]
klass = Jober.find_class(klass_name)

unless klass
  App.logger.error { "not found class #{klass_name}" }
  exit(1)
end

App.logger.info { "Jober #{klass_name} just started" }

$0 = "linkchecker jober #{klass_name}"

klass.new.run_loop

